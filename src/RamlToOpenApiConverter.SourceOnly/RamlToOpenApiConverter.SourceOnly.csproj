<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <VersionPrefix>0.0.0-preview-01</VersionPrefix>
        <Authors>Stef Heyenrath</Authors>
        <Description>Source Code only project to convert RAML file to Open API Specification</Description>
        <PackageTags>raml;openapi;OAS;converter</PackageTags>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageReleaseNotes>See ReleaseNotes.md</PackageReleaseNotes>
        <PackageProjectUrl>https://github.com/StefH/RamlToOpenApiConverter</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/StefH/RamlToOpenApiConverter</RepositoryUrl>
        <ProjectGuid>{D3804228-91F4-2222-9595-39584E5A01AD}</ProjectGuid>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>

        <IncludeBuildOutput>false</IncludeBuildOutput>
        <!--<ContentTargetFolders>contentFiles</ContentTargetFolders>-->
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="..\RamlToOpenApiConverter\**\*.cs" Exclude="bin\**\*.cs">
            <Pack>true</Pack>
            <PackagePath>contentFiles\cs\any\RamlToOpenApiConverter</PackagePath>
            <BuildAction>Compile</BuildAction>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="obj\**" />
        <Content Remove="..\RamlToOpenApiConverter\obj\**" />
        <EmbeddedResource Remove="obj\**" />
        <None Remove="obj\**" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.OpenApi" Version="2.0.0-preview.17" PrivateAssets="All" />
        <PackageReference Include="Microsoft.OpenApi.YamlReader" Version="2.0.0-preview.17" PrivateAssets="All" />
        <PackageReference Include="YamlDotNet" Version="8.1.0" PrivateAssets="All" />
    </ItemGroup>

</Project>