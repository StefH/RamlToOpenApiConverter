            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "age": {
            "minimum": 0,
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "PersonInclude": {
        "required": [
          "firstName",
          "lastName"
        ],
