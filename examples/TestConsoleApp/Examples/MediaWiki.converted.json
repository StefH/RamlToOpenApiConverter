{
  "openapi": "3.0.1",
  "info": {
    "title": "MediaWiki",
    "description": "The MediaWiki action API is a web service that provides convenient access to wiki features, data, and meta-data over HTTP, via a URL usually at api.php",
    "version": "v1"
  },
  "servers": [
    {
      "url": "https://en.wikipedia.org/w/api.php"
    }
  ],
  "paths": {
    "/helloworld": {
      "get": {
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "id": {
                      "type": "number"
                    }
                  }
                },
                "example": {
                  "message": "Hello world"
                }
              }
            }
          },
          "404": {
            "description": "Returned if there is no re-indexing task found"
          }
        }
      }
    },
    "/": {
      "get": {
        "description": "Title normalization | Missing and invalid titles | Resolving redirects | Exporting pages | Getting a list of page IDs",
        "parameters": [
          {
            "name": "action",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "titles",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "format",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "redirects",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "generator",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "export",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "indexpageids",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "anyOf": [
                    {
                      "$ref": "#/components/schemas/Normalization"
                    },
                    {
                      "$ref": "#/components/schemas/QueryResult"
                    },
                    {
                      "$ref": "#/components/schemas/RedirectsQuery"
                    },
                    {
                      "$ref": "#/components/schemas/ExportQuery"
                    },
                    {
                      "$ref": "#/components/schemas/PagesLists"
                    }
                  ]
                }
              }
            }
          },
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Normalization"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NormalizedItem": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        }
      },
      "Pages": {
        "type": "object"
      },
      "Normalization": {
        "type": "object",
        "properties": {
          "query": {
            "type": "object",
            "properties": {
              "normalized": {
                "type": "NormalizedItem[]"
              },
              "pages": {
                "type": "object"
              }
            }
          }
        }
      },
      "QueryResult": {
        "type": "object",
        "properties": {
          "query": {
            "type": "object",
            "properties": {
              "pages": {
                "type": "object"
              }
            }
          }
        }
      },
      "Destination": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        }
      },
      "RedirectsQuery": {
        "type": "object",
        "properties": {
          "query": {
            "type": "object",
            "properties": {
              "redirects": {
                "type": "object"
              },
              "pages": {
                "type": "object"
              }
            }
          }
        }
      },
      "Page": {
        "type": "object",
        "properties": {
          "ns?": {
            "type": "number"
          },
          "title?": {
            "type": "string"
          },
          "pageid?": {
            "type": "string"
          }
        }
      },
      "ExportQuery": {
        "type": "object",
        "properties": {
          "query": {
            "type": "object",
            "properties": {
              "pages": {
                "type": "Page[]"
              },
              "export": {
                "type": "object"
              }
            }
          }
        }
      },
      "PagesLists": {
        "type": "object",
        "properties": {
          "query": {
            "type": "object",
            "properties": {
              "pageids": {
                "type": "string[]"
              },
              "pages": {
                "type": "object"
              }
            }
          }
        }
      }
    }
  }
}